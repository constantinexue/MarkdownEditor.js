                                p
                                    a(href='#') ACE Editor
                        div.panel.panel-default
                            div.panel-heading
                                | References
                            div.panel-body
                                p
                                    a(href='https://stackedit.io/') StackEditor
                                p
                                    a(href='https://stackedit.io/') StackEditor
                                p
                                    a(href='https://stackedit.io/') StackEditor
                                p
                                    a(href='https://stackedit.io/') StackEditor
                    div.modal-footer
                        button.btn.btn-primary(type='button', data-dismiss='modal') OK
