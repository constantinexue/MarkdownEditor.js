div#modal-settings.modal.fade(tabindex='-1', role='dialog', aria-hidden='true', data-backdrop='static')
    div.modal-dialog
        div.modal-content
            div.modal-header
                //-button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
                h4.modal-title Settings
            div.modal-body
                ul.nav.nav-tabs
                    li.active
                        a(href='#settings-general', data-toggle='tab') General
                    li
                        a(href='#settings-shortcuts', data-toggle='tab') Shortcuts
                div.tab-content
                    div#settings-general.tab-pane.fade.in.active
                        br
                        form.form-horizontal(role='form')
                            div.form-group
                                label.col-sm-3.control-label Editor Theme
                                div.col-sm-9
                                    select.form-control.selectpicker
                                        - each theme in ace.themes
                                            option #{theme}
                            div.form-group
                                label.col-sm-3.control-label Editor Font Size
                                div.col-sm-9
                                    select.form-control.selectpicker
                                        option 12
                                        option 14
                                        option 16
                                        option 18
                    div#settings-shortcuts.tab-pane.fade C
            div.modal-footer
                button.btn.btn-success(type='button') &nbsp;&nbsp;Save&nbsp;&nbsp;
                button.btn.btn-default(type='button', data-dismiss='modal') Cancel